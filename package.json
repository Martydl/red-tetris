{
  "name": "red-tetris",
  "private": true,
  "version": "1.0.0",
  "description": "42 project: multiplayer web-based Tetris",
  "scripts": {
    "postinstall": "cd client && npm install && cd ../server && npm install",
    "dev": "concurrently \"npm --prefix client run build-srv-watch\" \"npm run srv-dev\"",
    "cli-dev": "npm --prefix client run dev",
    "cli-build": "npm --prefix client run build",
    "cli-build-srv": "npm --prefix client run build-srv",
    "srv-dev": "npm --prefix server run dev",
    "srv-build": "npm --prefix server run build",
    "build": "npm run srv-build && npm run cli-build",
    "start": "cd dist && node app.js",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "coverage": "vitest run --coverage"
  },
  "devDependencies": {
    "@vitest/coverage-c8": "^0.24.3",
    "@vitest/ui": "^0.24.3",
    "concurrently": "^7.4.0",
    "vitest": "^0.24.3"
  },
  "dependencies": {
    "express": "^4.18.1",
    "socket.io": "^4.5.2",
    "socket.io-client": "^4.5.2"
  }
}
